<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">


        <ImageView
            android:id="@+id/img_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@id/img_product"
            android:padding="4dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_description_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title_product"
            android:layout_alignParentLeft="true"
            android:textSize="10dp"
            android:layout_margin="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@id/img_product"
            android:padding="4dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_price_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_description_product"
            android:layout_toLeftOf="@id/img_product"
            android:text="TextView"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@id/txt_description_product"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_minuse"
            android:layout_margin="4dp"
            android:backgroundTint="#970536" />

        <ImageButton
            android:id="@+id/btn_remove"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@id/txt_description_product"
            android:layout_toRightOf="@id/btn_add"
            android:background="@drawable/ic_add"
            android:layout_margin="4dp"
            android:backgroundTint="#065E09" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>